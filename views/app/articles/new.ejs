<%- include("./../../html/open.ejs") %>

<%- include("./../../components/navbar.ejs") %>

<div class="container pt-5">
    <div class="row">
        <div class="col col-12 col-md-6 col-lg-6 mx-auto mb-5">
            <form action="/app/artigos/novo" method="post">
                <h4 class="h4 h4-responsive text-black-50 mb-5">Cadastro de artigo</h4>
                <p class="text-black-50">Nome do artigo</p>
                <input type="text" name="title" class="mb-2 form-control" autofocus required placeholder="Qual o nome desse artigo?">
                <div class="form-group">
                    <label for="categories" class="text-black-50 mt-3 mb-3">Categoria do artigo</label>
                    <select name="category" class="form-control" id="categories">
                        <option value="#" selected></option>
                        <% categories.forEach(category => { %>
                            <option value="<%= category.id %>">
                                <%= category.title %>
                            </option>
                        <% }) %>
                    </select>
                    </div>
                <textarea name="body" id="textarea-article" cols="30" rows="10" class=""></textarea>
                <button class="btn btn-success btn-block mt-3">pronto</button>
            </form>
        </div>
    </div>
</div>

<script src="/libs/tinymce/js/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init(
        {
            selector: "#textarea-article",
            language: "pt_BR",
            plugins: [
                "advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons"
            ]
        }
    )
</script>

